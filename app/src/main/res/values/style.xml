<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="OutlineButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ColouredButton">
        <item name="strokeColor">@color/purple_200</item>
        <item name="strokeWidth">2dp</item>
    </style>


</resources>